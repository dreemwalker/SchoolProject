@model SchoolClient.Pages.AddStudentModel
@using SchoolClient.Models
@{
}
Add Student
<form method="post">
    Fullname <input type="text" name="name" />
  
    Class       <select name="classid">
               @foreach (Class cl in Model.classes)
                    {
                     <option value="@cl.Id">@cl.Name</option>
                    }
           </select>
    Gender  <select name="gender">
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>
    <input type="submit" value="Add" /> <a href="./Students">Back</a>
</form>