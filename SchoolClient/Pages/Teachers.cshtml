@page
@model SchoolClient.Pages.TeachersModel
@using SchoolClient.Models
@{
}
<h1>Teachers</h1>
<a href="./AddTeacher">Add</a>
<table class="table">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Position</td>
        <td></td>


    </tr>
    @foreach (Teacher teacher in Model.teachers)
    {
    <tr>
        <td>@teacher.Id</td>
        <td>@teacher.Fullname</td>
        <td>@teacher.Position</td>
        <td>
            <a asp-page="./Teachers" onclick="return confirm('Are you sure you want to delete this item?');"
               asp-page-handler="Delete" asp-route-id="@teacher.Id">Delete</a> 
            <a asp-page="./EditTeacher"
               asp-page-handler="Get" asp-route-id="@teacher.Id">Edit</a>
        </td>

    </tr>
    }
</table>