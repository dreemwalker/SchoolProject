@model SchoolClient.Pages.StudentsModel
@using SchoolClient.Models
@{
}


<h1>Students</h1>
<a href="./AddStudent">Add</a>

@*<input id="gender" type="text" placeholder="Gender Filter">
<input id="classfilter" type="text" placeholder="Class Filter">*@

<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Student Fullname</td>
            <td>Gender</td>
            <td>Class</td>
            <td></td>


        </tr>
    </thead>
    <tbody id="ftable">
        @foreach (Student student in Model.students)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Fullname</td>
            <td>@student.Gender</td>
            @if (@student.Class == null)
        {
            <td>не назначен</td>}
    else
    {
        <td>@student.Class.Name</td>
}

            <td>
                <a asp-page="./Students" onclick="return confirm('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-id="@student.Id">Delete</a>

                <a asp-page="./EditStudent"
                   asp-page-handler="Get" asp-route-id="@student.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>